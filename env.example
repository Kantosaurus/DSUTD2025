# =============================================================================
# DSUTD 2025 - Environment Configuration
# =============================================================================
# 
# CRITICAL SECURITY: This file contains example values only.
# Copy this file to .env and replace all values with your actual secure credentials.
# Never commit the actual .env file to version control.
#
# =============================================================================

# =============================================================================
# JWT CONFIGURATION (CRITICAL SECURITY)
# =============================================================================
# Generate a strong, unique JWT secret (minimum 32 characters)
# Use: openssl rand -base64 64 or a secure password generator
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long-change-this-immediately

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://webapp_user:webapp_password@localhost:5431/webapp_db

# Database credentials (for Docker setup)
POSTGRES_DB=webapp_db
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=your-secure-database-password-minimum-16-characters

# =============================================================================
# EMAIL CONFIGURATION (Gmail with App Password)
# =============================================================================
# Gmail account for sending verification emails
EMAIL_USER=your-gmail@gmail.com
# Use Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your-16-character-gmail-app-password
EMAIL_FROM=your-gmail@gmail.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Enable/disable automatic database migrations
AUTO_MIGRATE=true

# Session configuration
SESSION_SECRET=your-session-secret-different-from-jwt-secret

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# Enable HTTPS in production
FORCE_HTTPS=false

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable security event logging
ENABLE_SECURITY_LOGGING=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database backup configuration
ENABLE_AUTO_BACKUP=false
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ADVANCED SECURITY FEATURES
# =============================================================================
# Enable Two-Factor Authentication
ENABLE_2FA=false

# Enable device fingerprinting
ENABLE_DEVICE_FINGERPRINTING=true

# Enable IP whitelisting (comma-separated IPs)
ALLOWED_IPS=

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
# Enable GDPR compliance features
ENABLE_GDPR_COMPLIANCE=false

# Data retention period (days)
DATA_RETENTION_DAYS=2555

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================
# Maximum request size
MAX_REQUEST_SIZE=10mb

# Request timeout (ms)
REQUEST_TIMEOUT_MS=30000

# =============================================================================
# DEVELOPMENT ONLY (Remove in production)
# =============================================================================
# Enable debug mode (development only)
DEBUG=false

# Enable detailed error messages (development only)
SHOW_DETAILED_ERRORS=false 